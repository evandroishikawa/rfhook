{
  "name": "rfhook",
  "version": "1.3.0",
  "description": "A lightweight React hook for handling form submissions with advanced form data parsing capabilities. Supports nested objects, arrays, and dot notation for complex form structures.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/evandroishikawa/rfhook.git"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prepare": "husky",
    "release": "standard-version"
  },
  "keywords": [
    "react",
    "hook",
    "form",
    "typescript",
    "form-data",
    "nested-objects",
    "form-handling",
    "lightweight",
    "react-hooks",
    "form-submission"
  ],
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.0",
    "rollup": "^4.55.2",
    "standard-version": "^9.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
